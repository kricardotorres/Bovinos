  <div class="field">
    <%= form.label :purpouse %>
    <%= form.text_field :purpouse, id: :nutritional_control_purpouse %>
  </div>

  <div class="field">
    <%= form.label :from_date %>
    <%= form.date_select :from_date, id: :nutritional_control_from_date %>
  </div>

  <div class="field">
    <%= form.label :to_date %>
    <%= form.date_select :to_date, id: :nutritional_control_to_date %>
  </div>


  <div class="field">
  <% Aliment.all.each do |aliment| %>
        <%= check_box_tag "nutritional_control[aliment_ids][]", aliment.id, form.object.aliments.include?(aliment) %>
        <%= aliment.name %>
  <% end %>
  </div>





  <div class="actions">
    <%= form.submit %>
  </div>
