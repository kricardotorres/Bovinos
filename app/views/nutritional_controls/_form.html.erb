<%= form_with(model: nutritional_control, local: true) do |form| %>
  <% if nutritional_control.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(nutritional_control.errors.count, "error") %> prohibited this nutritional_control from being saved:</h2>

      <ul>
      <% nutritional_control.errors.full_messages.each do |message| %>
