<div class="row bg-title">
  <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
    <h4 class="page-title"><%=t('users.title')%></h4>
  </div>
  <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
    <ol class="breadcrumb">
      <li><%= link_to "Inicio", admin_users_path %></li>
      <li class="active">Usuarios</li>
    </ol>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="white-box">
      <h3 class="box-title m-b-0"><%=t('users.users_list')%></h3>
 
      <%= link_to  new_admin_user_path , {remote:true, class: "fcbtn btn btn-success btn-1e" } do %>
      <i class="icon-plus"></i>
      <span>Nuevo</span>
      <%end%>

       <%= link_to  filter_admin_users_path , {remote:true, class: "fcbtn btn btn-primary btn-1e" } do %>
      <i class="icon-search"></i>
      <span>Buscar</span>
      <%end%>

 
      <div class="clearfix"></div>
      <div class="scrollable">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th><%=t('users.id')%></th>
                <th><%=t('users.name')%></th> 
                <th><%=t('users.email')%></th>
                <th><%=t('users.rol')%></th>  
                <th><%=t('users.status')%></th> 
                <th><%=t('users.actions')%></th>
              </tr>
            </thead>
            <tbody class="index-users">
              <%= render "index" %>
            </tbody>
            <tfoot>
              
            </tfoot>
          </table>
          <div class="pull-right" style="margin-right: 10%;">
             <%= paginate @users %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="user-modal" class="modal fade"  role="dialog"></div>