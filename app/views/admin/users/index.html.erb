<div class="row">
  <div class="col-lg-12">
    <div class="card">
       <div class="header">
            <h4 class="title"><i class="pe-7s-user"></i> <%=t('users.users_list')%></h4>
            <p class="category"><%= notice %></p>
        </div> 
      
      <div class="content">
      <%= link_to  new_admin_user_path , {remote:true, class: "fcbtn btn btn-success btn-1e" } do %>
      <i class="icon-plus"></i>
      <span>Nuevo</span>
      <%end%>

       <%= link_to  filter_admin_users_path , {remote:true, class: "fcbtn btn btn-primary btn-1e" } do %>
      <i class="icon-search"></i>
      <span>Buscar</span>
      <%end%>

 
     
          <table class="table">
            <thead>
              <tr>
                <th><%=t('users.id')%></th>
                <th><%=t('users.name')%></th> 
                <th><%=t('users.email')%></th>
                <th><%=t('users.rol')%></th>  
                <th><%=t('users.status')%></th> 
                <th><%=t('users.actions')%></th>
              </tr>
            </thead>
            <tbody class="index-users">
              <%= render "index" %>
            </tbody>
            <tfoot>
              
            </tfoot>
          </table>
          <div class="pull-right" style="margin-right: 10%;">
             <%= paginate @users %>
          </div>
        </div> 
    </div>
  </div>
</div>
<div id="user-modal" class="modal fade"  role="dialog"></div>