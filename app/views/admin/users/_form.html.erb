
<%= form_for [:admin, @user], remote: true, html: { role: "form", class:"form-material" } do |f| %>
	<div class="modal-body">
		<div class="form-group">
			<div style="background-color:red; color:white; font-weight:bold;">
				<ul class="errors"></ul>
			</div> 
				<%if @user.new_record?%>
					<div class="col-md-12 m-b-20"> 
						<label class="col-md-12"><%= t("users.email")%></label>
						<div class="col-md-12">
							<%= f.text_field :email, class: "form-control"  %>
						</div>
					</div>
          <hr>
				<%end%>
				<div class="col-md-12 m-b-20"> 
					<label class="col-md-12"><%= t("users.password")%></label>
					<div class="col-md-12">
						<%= f.password_field :password, class: "form-control" %>
					</div>
				</div> <hr>
				<div class="col-md-12 m-b-20"> 
					<label class="col-md-12"><%= t("users.password_confirmation")%></label>
					<div class="col-md-12">
						<%= f.password_field :password_confirmation, class: "form-control"  %>
					</div>  
				</div> <hr>
				<div class="col-md-12 m-b-20"> 
					<label class="col-md-12"><%= t("users.name")%></label>
					<div class="col-md-12">
						<%= f.text_field :name, class: "form-control"   %>
					</div>  
				</div> <hr>
				<div class="col-md-12 m-b-20"> 
					<label class="col-md-12"><%= t("users.lastname")%></label>
					<div class="col-md-12">
						<%= f.text_field :lastname, class: "form-control"     %>
					</div>  
				</div> <hr>
				<div class="col-md-12 m-b-20">
					<label class="col-md-12"><%= t("users.role")%></label>
					<div class="col-md-6">
						<%= f.collection_select :role_id, Role.where("deleted_at IS NULL"), :id, :rol_name, {prompt: 'Selecciona...'}, class:"form-control" %>
					</div>
				</div>  
       
         <hr>
			 
		 
		</div>
	</div>
  <hr>
	<div class="modal-footer">
		<%= f.submit class: "btn btn-primary" %> 
		<%= link_to t('user.cancel'), "#", class: "btn btn-default", data: {dismiss: "modal"} %>
	</div>
<% end %> 
 