<p id="notice"><%= notice %></p>

<h1>Carnets</h1>

<table class="table">
  <thead>
    <tr>
      <th>Earing sup</th>
      <th>Earing inf</th>
      <th>Vacune</th>
      <th>Aplication date</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carnets.each do |carnet| %>
      <tr>
        <td><%= carnet.earing_sup %></td>
        <td><%= carnet.earing_inf %></td>
        <td><%= carnet.vacune %></td>
        <td><%= carnet.aplication_date %></td>
        <td><%= carnet.weight %></td>
        <td><%= link_to 'Show', carnet %></td>
        <td><%= link_to 'Edit', edit_carnet_path(carnet) %></td>
        <td><%= link_to 'Destroy', carnet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

