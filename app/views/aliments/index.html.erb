 
<div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Control Nutricional</h4>
                                <p class="category"><%= notice %></p>
                            </div>
                            <div class="content table-responsive table-full-width">
                                <table class="table table-hover table-striped">
                                  <thead>
                                    <tr>
                                      <th>Name</th>
                                      <th colspan="3"></th>
                                    </tr>
                                  </thead>
                                <tbody>
                                  <% @aliments.each do |aliment| %>
                                    <tr>
                                      <td><%= aliment.name %></td>
                                      <td><%= link_to 'Show', aliment %></td>
                                      <td><%= link_to 'Edit', edit_aliment_path(aliment) %></td>
                                      <td><%= link_to 'Destroy', aliment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                    </tr>
                                  <% end %>
                                </tbody>                                
                              </table>
                              <%= link_to 'New Aliment', new_aliment_path %>
                            </div>
                        </div>
                    </div>

          
               

                </div>
