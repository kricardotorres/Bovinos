<p id="notice"><%= notice %></p>

<h1>Aliments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @aliments.each do |aliment| %>
      <tr>
        <td><%= aliment.name %></td>
        <td><%= link_to 'Show', aliment %></td>
        <td><%= link_to 'Edit', edit_aliment_path(aliment) %></td>
        <td><%= link_to 'Destroy', aliment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Aliment', new_aliment_path %>
